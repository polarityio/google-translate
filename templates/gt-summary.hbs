{{#each details.data.translations as |object|}}
  {{#if object.translatedText}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
       <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
       <span class="integration-text-color">{{object.translatedText}}</span>
    </span>
  {{/if}}
  {{#if object.detectedSourceLanguage}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
       <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
       <span class="integration-text-color">Detected Language: {{object.detectedSourceLanguage}}</span>
    </span>
  {{/if}}
{{/each}}
