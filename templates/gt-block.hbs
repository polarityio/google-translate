<li class="d-flex align-items-center justify-content-end copy-btn-container">
  <button class="btn copy-btn p-action" {{action "copyData"}} title="Copy Information to Clipboard">
    {{fa-icon icon="clipboard" fixedWidth=true}}
  </button>
  <div class="copy-success-message {{if showCopyMessage "visible" "hidden"}}">
    {{fa-icon icon="check" fixedWidth=true class="copy-success-icon"}}
    Copied Translation.
  </div>
</li>
{{#each details.data.translations as |object|}}
  {{#if object.translatedText}}
    <a
      class="p-link"
      href="https://translate.google.com/?hl=&tab=TT&sl=auto&tl={{block.userOptions.outputLanguage.value}}&text={{block.entity.value}}&op=translate"
    > Pivot to Google Translate {{fa-icon icon="external-link-square" class="external-link-icon"}}</a>
    <h1 class="p-title">
      {{fa-icon icon="language" fixedWidth=true}}
      Translation Output
    </h1>
    <div id={{concat "translate-container-" uniqueIdPrefix}}>{{object.translatedText}}</div>
  {{/if}}
{{/each}}